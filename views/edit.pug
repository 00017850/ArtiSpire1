extends layout

block content
  .add-container
    h1 ReTouch your Art Inspiration
    form(action=`/api/edit`, method='POST')
      .form-group
        input(type='hidden', name='id', value=artEntry.id)
        label(for='title') Title
        input(type='text', id='title', name='title', value=artEntry.title, required)

      .form-group
        label(for='description') Description
        textarea(id='description', name='description', rows='4', required)= artEntry.description

      .form-group
        label(for='image') Image URL
        input(type='url', id='image', name='image', value=artEntry.image, required)

      button.btn(type='submit') Save Changes
